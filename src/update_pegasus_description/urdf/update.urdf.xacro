<?xml version="1.0"?>
<robot name="pegasus" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- World Link (required for world_to_base_joint) -->
  <link name="world"/>

  <!-- Base Link - Base mechanism with internal spur gear -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.0375" ixy="0" ixz="0" iyy="0.0375" iyz="0" izz="0.0225"/>
    </inertial>
  </link>

  <!-- Link 1 - Base upper part (Joint 5 in report - Base rotation) -->
  <link name="link1">
    <visual>
      <geometry><box size="0.12 0.12 0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.12 0.12 0.08"/></geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.0069" ixy="0" ixz="0" iyy="0.0069" iyz="0" izz="0.0096"/>
    </inertial>
  </link>

  <!-- Link 2 - Shoulder link (Joint 4 in report - Shoulder joint with 2 motors) -->
  <link name="link2">
    <visual>
      <geometry><box size="0.25 0.08 0.06"/></geometry>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.25 0.08 0.06"/></geometry>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <mass value="0.7"/>
      <inertia ixx="0.0024" ixy="0" ixz="0" iyy="0.0159" iyz="0" izz="0.0177"/>
    </inertial>
  </link>

  <!-- Link 3 - Upper arm link (Joint 3 in report - Elbow joint) -->
  <link name="link3">
    <visual>
      <geometry><box size="0.22 0.06 0.05"/></geometry>
      <origin xyz="0.11 0 0" rpy="0 0 0"/>
      <material name="yellow">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.22 0.06 0.05"/></geometry>
      <origin xyz="0.11 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0.11 0 0" rpy="0 0 0"/>
      <mass value="0.6"/>
      <inertia ixx="0.0013" ixy="0" ixz="0" iyy="0.0086" iyz="0" izz="0.0091"/>
    </inertial>
  </link>

  <!-- Link 4 - Forearm link (Joint 2 in report) -->
  <link name="link4">
    <visual>
      <geometry><box size="0.18 0.05 0.04"/></geometry>
      <origin xyz="0.09 0 0" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.18 0.05 0.04"/></geometry>
      <origin xyz="0.09 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0.09 0 0" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.0007" ixy="0" ixz="0" iyy="0.0055" iyz="0" izz="0.0058"/>
    </inertial>
  </link>

  <!-- Link 5 - Wrist link (Joint 1 in report - Wrist joint with 360° rotation) -->
  <link name="link5">
    <visual>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0.04 0 0" rpy="0 1.5708 0"/>
      <material name="purple">
        <color rgba="0.5 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.03" length="0.08"/></geometry>
      <origin xyz="0.04 0 0" rpy="0 1.5708 0"/>
    </collision>
    <inertial>
      <origin xyz="0.04 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0019" ixy="0" ixz="0" iyy="0.0019" iyz="0" izz="0.00027"/>
    </inertial>
  </link>

  <!-- Link 6 - Gripper mounting plate -->
  <link name="link6">
    <visual>
      <geometry><box size="0.06 0.08 0.02"/></geometry>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.06 0.08 0.02"/></geometry>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0011" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0017"/>
    </inertial>
  </link>

  <!-- End Effector Link - Gripper -->
  <link name="end_effector_link">
    <visual>
      <geometry><box size="0.04 0.06 0.08"/></geometry>
      <origin xyz="0.02 0 0.04" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry><box size="0.04 0.06 0.08"/></geometry>
      <origin xyz="0.02 0 0.04" rpy="0 0 0"/>
    </collision>
    <inertial>
      <origin xyz="0.02 0 0.04" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.00012" ixy="0" ixz="0" iyy="0.00009" iyz="0" izz="0.00007"/>
    </inertial>
  </link>

  <!-- Fixed joint from world to base -->
  <joint name="world_to_base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Joint 1 - Base rotation (360° rotation) - Start at 0 (no change) -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.28" upper="6.28" velocity="2.0" effort="150.0"/>
    <safety_controller k_velocity="10.0" k_position="15.0" soft_lower_limit="-6.20" soft_upper_limit="6.20"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 2 - Shoulder joint (35° range) - Start at -15° to lift arm up -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.08" rpy="0 -0.26 0"/>  <!-- -15° initial position -->
    <axis xyz="0 1 0"/>
    <limit lower="-0.61" upper="0.61" velocity="2.0" effort="80.0"/>
    <safety_controller k_velocity="10.0" k_position="15.0" soft_lower_limit="-0.57" soft_upper_limit="0.57"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 3 - Elbow joint (100° range) - Start at -45° to bend elbow -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.25 0 0" rpy="0 -0.785 0"/>  <!-- -45° initial position -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.75" upper="1.75" velocity="2.0" effort="40.0"/>
    <safety_controller k_velocity="10.0" k_position="15.0" soft_lower_limit="-1.70" soft_upper_limit="1.70"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 4 - Forearm joint (75° range) - Start at -75° to continue bend -->
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0.22 0 0" rpy="0 -1.27 0"/>  <!-- ~72.8° initial position -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.31" upper="1.31" velocity="2.0" effort="40.0"/>
    <safety_controller k_velocity="10.0" k_position="15.0" soft_lower_limit="-1.27" soft_upper_limit="1.27"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 5 - Wrist rotation (360° rotation) - Start at 0 (no change) -->
  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0.18 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-6.28" upper="6.28" velocity="2.0" effort="40.0"/>
    <safety_controller k_velocity="10.0" k_position="15.0" soft_lower_limit="-6.20" soft_upper_limit="6.20"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- Joint 6 - Gripper mounting (fixed) -->
  <joint name="joint6" type="fixed">
    <parent link="link5"/>
    <child link="link6"/>
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Joint from gripper mount to end effector -->
  <joint name="joint6_to_end_effector" type="fixed">
    <parent link="link6"/>
    <child link="end_effector_link"/>
    <origin xyz="0.06 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Transmission elements for ros2_control -->
  <transmission name="joint1_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint1">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint1_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="joint2_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint2">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint2_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="joint3_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint3">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint3_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="joint4_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint4">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint4_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="joint5_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint5">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint5_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- ros2_control Configuration -->
  <ros2_control name="PegasusArm" type="system">
    <hardware>
      <plugin>mock_components/GenericSystem</plugin>
      <param name="mock_sensor_commands">false</param>
      <param name="state_following_offset">0.0</param>
    </hardware>
    <joint name="joint1">
      <command_interface name="position">
        <param name="min">-6.28</param>
        <param name="max">6.28</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity">
        <param name="initial_value">0.0</param>
      </state_interface>
    </joint>
    <joint name="joint2">
      <command_interface name="position">
        <param name="min">-0.61</param>
        <param name="max">0.61</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">-0.26</param>
      </state_interface>
      <state_interface name="velocity">
        <param name="initial_value">0.0</param>
      </state_interface>
    </joint>
    <joint name="joint3">
      <command_interface name="position">
        <param name="min">-1.75</param>
        <param name="max">1.75</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">-0.785</param>
      </state_interface>
      <state_interface name="velocity">
        <param name="initial_value">0.0</param>
      </state_interface>
    </joint>
    <joint name="joint4">
      <command_interface name="position">
        <param name="min">-1.31</param>
        <param name="max">1.31</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">-1.27</param>
      </state_interface>
      <state_interface name="velocity">
        <param name="initial_value">0.0</param>
      </state_interface>
    </joint>
    <joint name="joint5">
      <command_interface name="position">
        <param name="min">-6.28</param>
        <param name="max">6.28</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity">
        <param name="initial_value">0.0</param>
      </state_interface>
    </joint>
  </ros2_control>
  <ros2_control name="robot_description"      type="robot_state_publisher">
    <param name="robot_description" value="$(find update_pegasus_description)/config/ros2_controllers.yaml"/>
</ros2_control>

  <!-- Gazebo-specific tags -->
  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <robot_param>robot_description</robot_param>
      <robot_param_node>robot_state_publisher</robot_param_node>
      <parameters>$(find update_pegasus_description)/config/ros2_controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- Gazebo material properties for better visualization -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link1">
    <material>Gazebo/Red</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link2">
    <material>Gazebo/Green</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link3">
    <material>Gazebo/Yellow</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link4">
    <material>Gazebo/Orange</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link5">
    <material>Gazebo/Purple</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="link6">
    <material>Gazebo/Grey</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

  <gazebo reference="end_effector_link">
    <material>Gazebo/Black</material>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <self_collide>0</self_collide>
  </gazebo>

</robot>
